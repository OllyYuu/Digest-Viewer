<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

<RelativeLayout
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="150dp" android:id="@+id/rLayout">


    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:id="@+id/logo"
            android:alpha=".25"
            android:scaleType="centerInside"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="name"
            android:id="@+id/sourceItemName"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:background="#7000"
            android:padding="10dp"
            android:textColor="#FFF"
            android:textSize="24sp"
            android:textStyle="bold"/>



</RelativeLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
            android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="false" android:layout_alignParentRight="false" android:gravity="right">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Статей:"
                android:id="@+id/labelNum" android:paddingRight="10dp"
                android:textStyle="bold"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text=""
                android:id="@+id/numberNewArticle" android:paddingRight="20dp"
                android:textStyle="bold"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Новых:"
                android:id="@+id/labelNumNew" android:paddingRight="10dp"
                android:textStyle="bold"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text=""
                android:id="@+id/numberArticle"
                android:textStyle="bold"/>
    </LinearLayout>
</LinearLayout>